<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_time %>
    <%= f.input :date %>
    <%= f.input :length %>
    <%= f.input :open %>
    <%= f.input :patient_birthdate %>
    <%= f.input :patient_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
