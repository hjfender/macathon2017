<div class="jumbotron">
    <div class="container">
  <h2>Select an Appointment</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Clinic</th>
        <th>Doctor Name</th>
        <th>Doctor Gender</th>
        <th>Specialty</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <% if appointment.open? && (@doctors.find(appointment.doctor_id).specialty == "Pediatric" || @doctors.find(appointment.doctor_id).specialty == "Optometry") %>
            <td> <%= @organizations.find(@doctors.find(appointment.doctor_id).organization_id).name%></td>
            <td> <%= @doctors.find(appointment.doctor_id).name %> </td>
            <td> <%= @doctors.find(appointment.doctor_id).gender %> </td>
            <td> <%= @doctors.find(appointment.doctor_id).specialty %></td>
            <td> <%= appointment.date %> </td>
            <td><%= link_to 'Book', edit_appointment_path(appointment), {:style =>'color:#FFFFFF;', :class=> "btn btn-lg btn-primary btn-block"} %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
